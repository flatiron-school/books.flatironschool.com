<!DOCTYPE html>
<html>
<head>
  <title>Flatiron Library</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
  <link href='http://fonts.googleapis.com/css?family=Kite+One' rel='stylesheet' type='text/css'>
  </head>
<body tabindex="1" class="<%= "#{params[:controller]} #{params[:action]}" %>">
  <nav class="navbar navbar-default" role="navigation">
    <a class="navbar-brand" href="http://flatironschool.com" id="main-font">
      <img src= "<%= "#{root_url}" %>assets/logos/flatiron.svg"/>
    </a>
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "Library", books_path %></li>
    </ul>
    <ul class="nav navbar-nav">
      <% if current_user && current_user.admin %>
        <li><%= link_to "Admin", admin_path %></li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li>
          <%= link_to "Sign out", signout_path %>
        </li>
      <% end %>
    </ul>
  </nav>
  <div class="container-fluid">
    <%= yield %>
  </div>
</body>
</html>
